<div id="addTerm" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Add a term</h3>
            </div>
            <div class="modal-body">
                <form method="post" action="/newterm">
                    <div class="form-group">
                        <label for="term">Term</label>
                        <input type="text" class="form-control" id="term" name="term" minlength="2" maxlength="30" required>
                    </div>
                    <div class="form-group">
                        <label for="summary">Short Definition</label>
                        <input type="text" class="form-control" id="summary" name="summary" minlength="42" maxlength="80" required>
                    </div>
                    <div class="form-group">
                        <label for="definition">Definition</label>
                        <textarea class="form-control" id="definition" name="definition" rows="10"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="source">Source</label>
                        <input type="url" class="form-control" id="source" name="source">
                    </div>
                    <div class="form-group">
                      <div class="check-box">
                        <label class="checkbox"><input name="tag" type="checkbox" value="CMS">CMS</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Database">Database</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Deployment">Deployment</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="File Type">File Type</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Framework">Framework</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="JavaScript">JavaScript</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Language">Language</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Library">Library</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="OS">OS</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Package Manager">Package Manager</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Pattern">Pattern</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Practice">Practice</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Principle">Principle</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Protocol">Protocol</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Protocol">Service</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Software">Software</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="Testing">Testing</label>
                        <label class="checkbox"><input name="tag" type="checkbox" value="World Wide Web">World Wide Web</label>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-default btn-addterm">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
